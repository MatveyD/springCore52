<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">



  <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

  <!--SERVICE-->
  <bean id="userService" class="service.impl.UserServiceImpl"/>
  <bean id="placeService" class="service.impl.PlaceServiceImpl"/>
  <bean id="bookingService" class="service.impl.BookingServiceImpl"/>
  <bean id="eventService" class="service.impl.EventServiceImpl"/>
  <bean id="discountService" class="service.impl.DiscountServiceImpl"/>

</beans>